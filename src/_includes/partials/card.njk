<article class="card card--{{ cardType }} flow">
    <time datetime="{{ post.date | toIsoString }}" class="text-black/[0.5] font-bold">{{ post.date | readableDate() }}</time>
    <a
        href="{{ post.url | url }}"
        class="card__title"
    >
        {{ post.data.title }}
    </a>
    <p class="card__description">{{ post.data.description }}</p>
    <ul class="cluster" role="list" style="--flow-space: 1.5rem; --space-s-l: 5px">
        {% for tag in post.data.tags %}
            {% if tag != 'writing' %}
                <li>
                    {% set tagUrl %}/tag/{{ tag | slugify }}/{% endset %}
                    <a
                        href="{{ tagUrl | url }}"
                        class="category"
                    >
                        {{ tag }}
                    </a>
                </li>
            {% endif %}
        {% endfor %}
    </ul>
</article>