{% set postslist = collections.writing %}
{% set postslistCounter = collections.writing | length %}

<section class="relative recent-posts">

	<div class="container relative flex flex-col mdw:site-grid fl-pb-3xl">
		<div class="col-start-1 col-end-7 fl-py-l">
			<h2 class="h2 heading">Recently Published</h2>
			<ol class="list-none fl-py-m">
				{% for post in postslist | reverse | limit(5) %}
					<li class="fl-mt-m first:mt-0">
						{% include "partials/block--post-thin.njk" %}
					</li>
				{% endfor %}
			</ol>
		</div>
		<div class="flex flex-col justify-between h-full col-start-9 col-end-13 fl-py-l">
			<div class="flex flex-col">
				<h3 class="h2 heading">Categories</h3>
				<div class="fl-mt-xs flex flex-wrap gap-[10px]">
				{% for tag in collections.tagsList %}
					{% if tag != 'writing' %}
						<a class="category" href="/tags/{{tag}}">{{tag}}</a>
					{% endif %}
				{% endfor %}
				</div>
			</div>
		</div>
	</div>
</section>