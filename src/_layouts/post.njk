---
layout: main
---

{% block content %}
	{% caniuse_js %}
	{% include "partials/posts/post--hero.njk" %}
	<div class="wrapper flex flex-col mdw:site-grid">
		<article class="col-start-1 col-span-8 row-start-1 post-body mdw:max-w-[900px] fl-py-l mdw:fl-py-3xl flow">
			<div class="fl-text-step-1 font-bold tracking-[-0.04em] mb-[1rem] mdw:mb-[3rem]">
				{{ intro | safe }}
			</div>
			<div class="post-body flow">
				{{ content | safe }}
			</div>
		</article>
		{% if links or tags %}
		<aside class="block col-start-10 col-span-4 row-start-1 fl-my-l mdw:fl-mt-3xl">
			<div
				class="sticky top-[80px]"
			>
				<span class="uppercase tracking-[-0.04em] heading text-black/[0.75] font-bold">More Information</span>
				<div class="flex flex-col fl-py-s flow" style="--flow-space: 31.5px">
					<ul class="flex flex-col flow" style="--flow-space: 10px">
					{% if links %}
						{% for link in links %}
							<li>
								<a class="no-underline hover:underline" href="{{ link.target }}" target="_blank">{{ link.title }}</a>
							</li>
						{% endfor %}
					{% endif %}
					</ul>
					<ul class="cluster" role="list" style="--space-s-l: 10px">
						{% for tag in tags %}
							{% if tag != 'writing' %}
								<li>
									{% set tagUrl %}/tag/{{ tag | slugify }}/{% endset %}
									<a
										href="{{ tagUrl | url }}"
										class="category"
									>
										{{ tag }}
									</a>
								</li>
							{% endif %}
						{% endfor %}
					</ul>
				</div>
			</div>
		</aside>
		{% endif %}
	</div>
{% endblock %}
